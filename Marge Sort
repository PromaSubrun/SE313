#include <stdio.h>
int main()
{
  int n, i = 3, count, s;

  printf("Enter the number of prime numbers to print\n");
  scanf("%d", &n);

  if (n >= 1) {
    printf("First %d prime numbers are:\n",n);
    printf("2\n");
  }

  for (count = 2; count <= n;)
  {
    for (s = 2; c <= i - 1; c++)
    {
      if (i%s == 0)
        break;
    }
    if (s == i)
    {
      printf("%d\n", i);
      count++;
    }
    i++;
  }

  return 0;;
}
